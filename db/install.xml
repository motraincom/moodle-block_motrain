<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="blocks/motrain/db" VERSION="20220505" COMMENT="XMLDB file for Moodle blocks/motrain"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="block_motrain_player" COMMENT="The user-player mappings">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="accountid" TYPE="char" LENGTH="128" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="playerid" TYPE="char" LENGTH="128" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="useraccount" UNIQUE="true" FIELDS="userid, accountid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="block_motrain_team" COMMENT="The cohort-team mappings.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="cohortid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="accountid" TYPE="char" LENGTH="128" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="teamid" TYPE="char" LENGTH="128" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="cohortaccount" UNIQUE="true" FIELDS="cohortid, accountid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>